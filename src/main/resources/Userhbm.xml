<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.rentfegh.model.User" table="users" schema="feghrent">
        <id name="email">
            <column name="email" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>